<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <LinearLayout
        style="@style/layout_my_info"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/photo"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

        <com.spark.szhb_master.ui.CircleImageView
            android:id="@+id/ivHeader"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_default_header_grey" />

        <ImageView style="@style/icon_more" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNickName"
        android:layout_marginTop="3dp"
        style="@style/layout_my_info">

        <TextView
            style="@style/textview_tag_my_info"
            android:text="@string/nikename" />

        <TextView
            android:id="@+id/nickname"
            android:textColor="@color/white"
            style="@style/textview_state_my_info" />

        <ImageView style="@style/icon_more"
            android:id="@+id/nike_img"/>

    </LinearLayout>

</LinearLayout>
