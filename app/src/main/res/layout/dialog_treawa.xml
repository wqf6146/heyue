<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/update_shape_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@mipmap/close_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/name_title"
        android:textColor="#42546a"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:text="@string/treasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/comeone"
        android:textColor="#42546a"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/increase_pow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/ed_trea_dialog"
        android:gravity="center"
        android:minWidth="50dp"
        android:minHeight="25dp"
        android:inputType="number"
        android:background="@drawable/trea_editext"
        android:textColor="#01b37d"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:visibility="gone"
        android:textColor="#01b37d"
        android:textSize="13sp" />
    <LinearLayout
        android:id="@+id/line_dialog"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/min_text"
            android:text="1"
            android:textColor="@color/blue_trea"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <SeekBar
            android:id="@+id/bunnleSeekBar"
            android:progressDrawable="@drawable/bg_adjust_seek_bar"
            android:maxHeight="8dp"
            android:thumb="@drawable/seek"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.xw.repo.BubbleSeekBar
            android:visibility="gone"
            app:bsb_section_text_color="@color/blue_trea"
            app:bsb_show_thumb_text="true"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:bsb_second_track_color="#01b37d"
            app:bsb_track_color="#8042546a"
            app:bsb_track_size="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/max_text"
            android:text="10"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue_trea"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/gcxNum"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_market_editext"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="65dp">

        <TextView
            android:padding="10dp"
            android:textColor="#838f9d"
            android:textSize="14dp"
            android:text="@string/trea_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_suanli"
                android:text="-8算力值"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_gcx"
                android:text="-16GCX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/cometwo"
        android:textColor="#42546a"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/call_return_gcx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"
        android:id="@+id/comethree"
        android:textColor="#42546a"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="您已经给该商品打Call了，赶紧邀请好友一起为您喜欢的商品打Call吧！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tvLogin"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@mipmap/yellow_btn"
        android:gravity="center"
        android:text="@string/start_digging"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_frd"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="邀请好友"
        android:textColor="@color/zise"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:id="@+id/lin_digg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <View
            style="@style/line_bg_grey">

        </View>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
            android:id="@+id/cancle"
            android:textSize="18dp"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="#97a1ac"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <View
            android:background="@color/line_bg_grey"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/go_up"
            android:textSize="18dp"
            android:gravity="center"
            android:text="@string/promotion"
            android:textColor="#4f4ab5"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>