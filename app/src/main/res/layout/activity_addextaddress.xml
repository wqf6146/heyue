<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlhead"
        android:paddingLeft="10dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_back"
            android:padding="10dp"
            android:id="@+id/ar_iv_close"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            android:text="添加地址"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/font_small"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:text="链名称"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rlChain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_btn_wgray_corner">

        <TextView
            android:id="@+id/tvChainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="USDT-ERC20"
            android:textColor="#1E273D"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_arrow_right" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/font_small"
        android:textColor="@color/tab_font"
        android:layout_margin="10dp"
        android:text="提币地址"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etExtAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:background="@drawable/bg_market_editext"
        android:hint="请输入提币地址"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/font_hint"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/font_small"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/tab_font"
        android:text="地址备注"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etRemark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:background="@drawable/bg_market_editext"
        android:hint="请输入地址备注"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/font_hint"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/tvConfirm"
        style="@style/btn_option_normal"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="确定" />

</LinearLayout>
