<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/main_bg_dark_2"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvName"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/white"
            android:text="黄饼川"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvAccount"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            android:layout_centerVertical="true"
            android:text="12312"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvBankHang"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/white"
            android:text="黄饼川"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvBankBrang"
            android:layout_toRightOf="@+id/tvBankHang"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            android:layout_centerVertical="true"
            android:text="12312"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="设置收付款"
            android:id="@+id/tvSfk"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_edit"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/swEnable"
            android:textColor="@color/white"
            android:text="是否启用"
            android:textSize="@dimen/font_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:switchPadding="5dp"
            android:switchMinWidth="40dp"
            android:track="@drawable/switch_selector_green"
            android:thumb="@drawable/switch_white_circle_selector"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/font_blue"
            android:text="解除绑定"
            android:id="@+id/tvUnBind"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>