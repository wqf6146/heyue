<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ff001414"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_lr_smallercorner"
        android:padding="10dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:id="@+id/tvText"
                android:text="购买USDT"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/tab_font"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tvPrice"
                android:text="价格 6.66"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/tab_font"
                android:text="金额"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/main_bg_dark_2">

                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:maxLength="10"
                    android:id="@+id/edPrice"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="全部"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/font_blue"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/tab_font"
                android:text="数量"
                android:textSize="@dimen/font_normal"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/main_bg_dark_2">

                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:maxLength="10"
                    android:id="@+id/edNum"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="全部"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/font_blue"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="取消"
                android:gravity="center"
                android:id="@+id/tvCancel"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/bg_gray_btn_shape"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="购买"
                android:gravity="center"
                android:textSize="@dimen/font_normal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tvSubmit"
                android:background="@drawable/bg_green_btn_shape"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>