<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/update_shape_back"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/dialog_three_title"
            android:textColor="#42546a"
            android:textSize="@dimen/font_xlager" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_market_editext"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_three_one"
                    android:textColor="#838f9d"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/edittext_normal"
                    android:gravity="right"
                    android:text="134156461CNY"
                    android:textColor="#17304d"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/tvCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_three_two"
                    android:textColor="#838f9d"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvCount"
                    style="@style/edittext_normal"
                    android:gravity="right"
                    android:text="0.32131BTC"
                    android:textColor="#17304d"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvTotalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_three_three"
                    android:textColor="#838f9d"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvTotal"
                    style="@style/edittext_normal"
                    android:gravity="right"
                    android:text="115156456CNY"
                    android:textColor="#17304d"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            style="@style/edittext_normal"
            android:layout_marginTop="25dp"
            android:lineSpacingExtra="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/dialog_three_msg"
            android:textColor="#42546a"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancle"
            style="@style/btn_option_normal"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/ffive_shape"
            android:text="@string/cancle"
            android:textColor="#97a1ac" />

        <TextView
            android:id="@+id/tvConfirm"
            style="@style/btn_option_normal"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/update_shape"
            android:text="@string/dialog_sure" />



    </LinearLayout>


</LinearLayout>