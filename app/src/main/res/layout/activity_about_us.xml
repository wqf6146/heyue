<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:layout_height="?actionBarSize"
        android:id="@+id/rlTitle"
        android:layout_width="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:id="@+id/ivBack"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_back"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="关于我们"
            android:textSize="@dimen/font_normal"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textSize="@dimen/font_normal"
                android:id="@+id/tvTitle1"
                android:text="服务条款"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvOneDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/main_font_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:padding="15dp"
                android:id="@+id/tvTitle2"
                android:textSize="@dimen/font_normal"
                android:text="上币申请"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTwoDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/main_font_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textSize="@dimen/font_normal"
                android:id="@+id/tvTitle3"
                android:text="服务条款"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvThreeDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/main_font_grey" />

            <!--版本更新-->
            <LinearLayout
                android:id="@+id/llVersion"
                style="@style/layout_my_info"
                android:visibility="gone">

                <TextView
                    style="@style/textview_my_item"
                    android:layout_marginLeft="0dp"
                    android:text="@string/my_version" />

                <TextView
                    android:id="@+id/tvVersionNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="V1.0.1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_small" />

                <ImageView style="@style/icon_more" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvPhone"
                style="@style/layout_my_info"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:text="客服电话: 400000000"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
