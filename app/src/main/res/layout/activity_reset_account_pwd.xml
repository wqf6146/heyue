<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/view_head" />

    <TextView
        android:background="@color/main_bg"
        android:id="@+id/tvTag"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/set_money_pwd_tag"
        android:textColor="@color/sec_font_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="登录密码"
            android:textColor="#444"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/etLoginPwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:text=""
            android:textColor="#444"
            android:textSize="15sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/llCode"
        style="@style/layout_my_info">

        <TextView
            style="@style/textview_tag"
            android:minWidth="100dp"
            android:text="@string/phone_code" />

        <EditText
            android:id="@+id/etCode"
            style="@style/edittext_normal"
            android:layout_weight="1"
            android:hint="@string/code"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvSend"
            style="@style/textveiw_msg_code"
            android:text="@string/send_code" />
    </LinearLayout>


    <View style="@style/line_bg_grey" />


    <LinearLayout style="@style/layout_my_info">

        <TextView
            style="@style/textview_tag"
            android:minWidth="100dp"
            android:text="@string/text_money_new" />

        <EditText
            android:id="@+id/etPwd"
            style="@style/edittext_normal"
            android:hint="@string/text_money_new"
            android:inputType="textPassword" />

    </LinearLayout>

    <View style="@style/line_bg_grey" />

    <LinearLayout style="@style/layout_my_info">

        <TextView
            android:id="@+id/tvRePwdTag"
            style="@style/textview_tag"
            android:minWidth="100dp"
            android:text="@string/repeat_password" />

        <EditText
            android:id="@+id/etRepeatePwd"
            style="@style/edittext_normal"
            android:hint="@string/repeat_password"
            android:inputType="textPassword" />

    </LinearLayout>


    <View style="@style/line_bg_grey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:background="#f6f8ff"
            android:layout_height="100dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#42546a"
                android:textSize="14dp"
                android:lineSpacingExtra="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="@string/zjmm_phone_code_tag"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ripple_btn_global_option_selector"
        android:gravity="center"
        android:text="@string/text_change"
        android:textColor="#FFF"
        android:textSize="18sp"/>

</LinearLayout>
