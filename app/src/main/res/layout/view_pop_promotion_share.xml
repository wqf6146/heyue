<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/llPromotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            style="@style/layout_my_info"
            android:background="@color/transparent"
            android:text="@string/invite"
            android:textColor="@color/main_font_grey"
            android:textSize="@dimen/font_lager" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@mipmap/bg_promotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pupClose"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/promot_close" />

            <TextView
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/tvLink"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/zise_shape"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="150dp"
                android:text="推广链接：www.Cayman.pro.u123445"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/textview_tag"
                    android:textSize="@dimen/font_xlager"
                    android:text="@string/reward_invitation" />

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/textview_tag"
                    android:layout_marginTop="5dp"
                    android:text="@string/reward_invita"
                    android:textColor="#38465a"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btn_normal"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <ImageView
                android:padding="5dp"
                android:id="@+id/ivPromotion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="centerInside" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llPromotion"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#f5f7ff"
            android:gravity="center"
            android:text="@string/copy_address"
            android:textColor="#97a1ac"
            android:textSize="@dimen/font_lager" />

        <TextView
            android:id="@+id/tvSave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/btn_hover"
            android:gravity="center"
            android:text="@string/save_to_album"
            android:textColor="@color/white"
            android:textSize="@dimen/font_lager" />

    </LinearLayout>
</LinearLayout>