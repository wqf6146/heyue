<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_dark_2"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="3dp"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trust_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="多"
            android:textColor="@color/white"
            android:background="@drawable/bg_green_corner"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_symbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.7"
            android:text="GCX/USDT"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/trust_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left"
            android:layout_marginRight="3dp"
            android:text="1111"
            android:textColor="@color/main_font_grey"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trust_ones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="持仓合约数量"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="实际成交(BTC)"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trust_twos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="持仓价格"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="实际成交(BTC)"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trust_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="最新价格"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_newprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="实际成交(BTC)"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="收益"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_shouyi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text=""
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="收益率"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_shouyilv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text=""
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="过夜费"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_guoyef"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="手续费"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_shouxufei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="止盈价"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_zhiyingjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="止损价"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_zhisunjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="保证金"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />


        <TextView
            android:id="@+id/trust_baozhengjin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/sec_font_grey"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>



    <TextView

        android:id="@+id/trust_btn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_corner"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:layout_gravity="right"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:text="@string/text_repeal"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small" />
</LinearLayout>