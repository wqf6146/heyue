<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_kline_hover"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/tabPop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvPopFen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分时"
            android:textColor="@color/font_index_pop_selector"
            android:textSize="@dimen/font_mini" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_font_kline" />

        <TextView
            android:id="@+id/tvPop1Fen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1分"
            android:textColor="@color/font_index_pop_selector"
            android:textSize="@dimen/font_mini" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_font_kline" />

        <TextView
            android:id="@+id/tvPop5Fen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5分"
            android:textColor="@color/font_index_pop_selector"
            android:textSize="@dimen/font_mini" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_font_kline" />

        <TextView
            android:id="@+id/tvPop30Fen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30分"
            android:textColor="@color/font_index_pop_selector"
            android:textSize="@dimen/font_mini" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_font_kline" />

        <TextView
            android:id="@+id/tvPop4Hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4小时"
            android:textColor="@color/font_index_pop_selector"
            android:textSize="@dimen/font_mini" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_font_kline" />

        <TextView
            android:id="@+id/tvPopDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日线"
            android:textColor="@color/font_index_pop_selector"
            android:textSize="@dimen/font_mini" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_font_kline" />

        <TextView
            android:id="@+id/tvPopMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月线"
            android:textColor="@color/font_index_pop_selector"
            android:textSize="@dimen/font_mini" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/main"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_font_kline" />

            <TextView
                android:id="@+id/tvMA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:text="MA"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBOLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="BOLL"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvMainHide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/hide"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/child"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_font_kline" />

            <TextView
                android:id="@+id/tvMACD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:text="MACD"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvKDJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="KDJ"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRSI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="RSI"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvWR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="WR"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvChildHide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/hide"
                android:textColor="@color/font_index_pop_selector"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>